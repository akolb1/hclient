#!/usr/bin/env bash

MAIN=com.akolb.Main
myhome=$(git rev-parse --show-toplevel)
JAR=hclient-1.0-SNAPSHOT-jar-with-dependencies.jar
JAR_PATH=${myhome}/target/${JAR}

if [[ -r ${JAR_PATH} ]]; then
    java -jar ${JAR_PATH} $*
else
    # Run SentryMain class. Maven takes care of all classpath dependencies.
    mvn -f ${myhome}/pom.xml exec:java -Dexec.mainClass=${MAIN} \
      -Dexec.args="$*"
fi

